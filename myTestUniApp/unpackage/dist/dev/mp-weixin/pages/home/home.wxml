<view class="message-box"><view class="message_content"><scroll-view class="message_scroll" scroll-y="true"><block wx:for="{{chatList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><block wx:if="{{!item.isMe}}"><view class="me_message-cell"><image class="me-head-icon" src="/static/header_me.png"></image><view class="me-message-info"><text class="me_message_title">张三</text><block wx:if="{{item.type==='text'}}"><text class="me_message-content">{{item.content}}</text></block><block wx:if="{{item.type==='image'}}"><image class="me_message-content-img" src="{{item.content}}" mode="widthFix"></image></block></view></view></block><block wx:if="{{item.isMe}}"><view class="friend_message-cell"><view class="friend-message-info"><text class="friend_message_title">小六</text><block wx:if="{{item.type==='text'}}"><text class="friend_message-content">{{item.content}}</text></block><block wx:if="{{item.type==='image'}}"><image class="friend_message-content-img" src="{{item.content}}" mode="widthFix"></image></block></view><image class="friend-head-icon" src="/static/header_friend.png"></image></view></block></block></block></scroll-view></view><view class="chat-footer"><input class="msg-input" type="text" cursor-spacing="16" data-event-opts="{{[['input',[['__set_model',['','messagestr','$event',[]]]]]]}}" value="{{messagestr}}" bindinput="__e"/><image class="img-chose" src="../../static/tab_icon_创作@2x.png" data-event-opts="{{[['tap',[['choseImgAndSend',['$event']]]]]}}" bindtap="__e"></image><view data-event-opts="{{[['tap',[['sendMsg',['$event']]]]]}}" class="send-btn" bindtap="__e">发送</view></view></view>